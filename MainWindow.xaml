
<Window x:Class="U5Lexicographic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U5Lexicographic"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label Content="Enter Number of Digits Here (1 - 10)"/>
        <TextBox x:Name="txtDigits" Text="10"/>
        <Label Content="Enter Term Number Here (1 - digit!)"/>
        <TextBox x:Name="txtInput" Text="1000000"/>
        <Button x:Name="btnRun" Content="Calculate" Click="btnRun_Click"/>
        <Label x:Name="lbl" Content=""/>
    </StackPanel>
</Window>
